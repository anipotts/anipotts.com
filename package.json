{
  "name": "anipotts.com",
  "version": "1.0.0",
  "private": true,
  "packageManager": "pnpm@9.15.4",
  "engines": {
    "node": ">=20.0.0"
  },
  "scripts": {
    "dev": "turbo dev",
    "build": "turbo build",
    "lint": "turbo lint",
    "typecheck": "turbo typecheck",
    "clean": "turbo clean && rm -rf node_modules",
    "format": "prettier --write \"**/*.{ts,tsx,md,json}\"",
    "dev:www": "turbo dev --filter=@anipotts/www",
    "dev:thoughts": "turbo dev --filter=@anipotts/thoughts",
    "dev:docs": "turbo dev --filter=@anipotts/docs",
    "dev:status": "turbo dev --filter=@anipotts/status",
    "dev:updates": "turbo dev --filter=@anipotts/updates",
    "dev:lab": "turbo dev --filter=@anipotts/lab",
    "dev:cli": "turbo dev --filter=@anipotts/cli",
    "dev:metrics": "turbo dev --filter=@anipotts/metrics",
    "dev:links": "turbo dev --filter=@anipotts/links",
    "dev:dev": "turbo dev --filter=@anipotts/dev"
  },
  "devDependencies": {
    "prettier": "^3.4.0",
    "turbo": "^2.5.0",
    "typescript": "^5.7.0"
  }
}
